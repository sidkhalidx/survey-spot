<!DOCTYPE html>
<html>
  <head>
    <title>SurveySpot</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-light">
    <%= render 'layouts/navigbar' %>
    <% if user_signed_in? %>
      <div class="row m-0">
        <div class="col-2 p-0" style="height: 94vh">
          <%= render 'layouts/home' %>
        </div>
        <div class="col-10">
          <%= yield %>
        </div>
      </div>
    <% else %>
      <div>
        <center>
          <%= yield %>
        </center>
      </div>
    <% end %>
  </body>
</html>