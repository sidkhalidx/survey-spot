<% flash.each do |type, msg| %>
  <% type="success" if type=="notice" %>
  <div class="alert alert-<%=type%> alert-dismissible fade show" role="alert">
    <div>
      <p class="m-0"><%=msg%></p>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>